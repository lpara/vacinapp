<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.lpara.vacinapp.principais.MinhasVacinaActivity">

    <EditText
        android:id="@+id/iptnDoenca"
        android:layout_width="285dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteY="251dp"
        tools:layout_editor_absoluteX="38dp"
        android:hint="Doença"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/txtFormDoenca"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnInserirVacinacao"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Inserir"
        tools:layout_editor_absoluteY="310dp"
        tools:layout_editor_absoluteX="130dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/btnDataRenovacao" />

    <Button
        android:id="@+id/btnCancelarOp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Cancelar"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/btnInserirVacinacao" />

    <TextView
        android:id="@+id/txtFormDoenca"
        android:layout_width="fill_parent"
        android:layout_height="26dp"
        android:gravity="center"
        android:textSize="20dp"
        android:text="Registro da Vacinação"
        tools:layout_editor_absoluteY="310dp"
        tools:layout_editor_absoluteX="110dp"
        android:layout_marginTop="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/iptnLote"
        android:layout_width="285dp"
        android:layout_height="40dp"
        android:layout_marginTop="42dp"
        android:hint="Lote"
        android:layout_below="@+id/btnDoses"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Definir Doses"
        android:layout_marginTop="35dp"
        android:id="@+id/btnDoses"
        android:layout_below="@+id/iptnDoenca"
        android:layout_alignStart="@+id/iptnDoenca"/>

    <TextView
        android:id="@+id/textRenovavel"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Definir data renovação"
        android:textSize="20dp"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/iptnLote"
        android:layout_alignStart="@+id/iptnLote" />

    <Button
        android:id="@+id/btnDataRenovacao"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Definir Data"
        android:layout_below="@+id/textRenovavel"
        android:layout_alignStart="@+id/textRenovavel" />

</RelativeLayout>
